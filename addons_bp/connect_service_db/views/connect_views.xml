<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--        Service connect form view-->
        <record id="view_service_db_connect_form" model="ir.ui.view">
            <field name="name">service.db.connect</field>
            <field name="model">service.db.connect</field>
            <field name="arch" type="xml">
                <form string="Service Connect">
                    <header>
                        <button name="service_connect" string="Connect"
                                class="btn-primary" type="object" />
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived"
                                bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible="1" />
                        <group>
                            <group>
                                <field name="name" />
                                <field name="contract_ref" required="1" />
                            </group>
                            <group>
                                <field name="service_url" required="1" />
                                <field name="description" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Response Details">
                                <group>
                                    <field name="status" readonly="1" />
                                    <field name="message" readonly="1" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

<!--        Service connect list view-->
        <record id="view_service_db_connect_list" model="ir.ui.view">
            <field name="name">service.db.connect</field>
            <field name="model">service.db.connect</field>
            <field name="arch" type="xml">
                <tree string="Service Connect">
                    <field name="contract_ref" />
                    <field name="service_url" />
                </tree>
            </field>
        </record>

<!--        Service connect action view-->
        <record id="action_service_db_connect" model="ir.actions.act_window">
            <field name="name">Service Connect</field>
            <field name="res_model">service.db.connect</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_service_db_connect_list"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Add Service to connect
              </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="IAP Connect"
            id="menu_root_connect_db"
            sequence="55"
            parent="base.menu_custom"
            />

        <menuitem name="IAP Service"
                  id="menu_sub_connect_db"
                  sequence="55"
                  parent="menu_root_connect_db"
                  action="connect_service_db.action_service_db_connect"
            />
    </data>
</odoo>
